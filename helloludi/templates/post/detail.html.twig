    <script>
        // Initialisation Froala pour les commentaires
        new FroalaEditor('.froala', {
            toolbarInline: true,
            language: 'fr',
            placeholderText: '√âcrivez votre contenu ici...',
            imageUploadURL: '/upload_image',
            imageUploadParams: { id: 'my_editor' },
            imageMaxSize: 5 * 1024 * 1024,
            imageAllowedTypes: ['jpeg', 'jpg', 'png', 'gif', 'bmp'],
        });

        // Syst√®me de notation par √©toiles
        const csrfToken = "{{ csrf_token('rate') }}";
        document.addEventListener('DOMContentLoaded', () => {
            const container = document.querySelector('.star-rating');

            if (!container) return;

            // Effet de survol
            container.addEventListener('mouseover', event => {
                if (event.target.classList.contains('fa-star')) {
                    highlightStars(container, event.target.dataset.value);
                }
            });

            // Clic sur une √©toile
            document.querySelectorAll('.fa-star').forEach(star => {
                star.addEventListener('click', event => {
                    const rating = parseInt(star.dataset.value, 10);
                    const postId = star.closest('.star-rating').dataset.postId;
                    sendRating(rating, postId);
                });
            });

            // Reset au survol
            container.addEventListener('mouseleave', () => {
                resetStars(container);
            });

            function resetStars(container) {
                container.querySelectorAll('.fa-star').forEach(star => {
                    star.classList.remove('hover');
                });
            }

            function highlightStars(container, value) {
                container.querySelectorAll('.fa-star').forEach(star => {
                    if (star.dataset.value <= value) {
                        star.classList.add('hover');
                    } else {
                        star.classList.remove('hover');
                    }
                });
            }

            function sendRating(rating, postId) {
                fetch(`/post/${postId}/rate`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest',
                        'X-CSRF-TOKEN': csrfToken,
                    },
                    body: JSON.stringify({rating: rating})
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.status === 'success') {
                            updateStarRating(rating, postId);
                            setTimeout(() => {
                                window.location.reload();
                            }, 1000);
                        } else {
                            console.error('Erreur serveur lors de l\'enregistrement du vote');
                        }
                    })
                    .catch(error => {
                        console.error('Erreur lors de l\'enregistrement de la note :', error);
                    });
            }

            function updateStarRating(rating, postId) {
                const container = document.querySelector('.star-rating');
                if (!container) return;

                container.style.pointerEvents = 'none';

                container.querySelectorAll('.fa-star').forEach(star => {
                    if (parseInt(star.dataset.value) <= rating) {
                        star.classList.add('selected');
                    } else {
                        star.classList.remove('selected');
                    }
                });

                // Message de remerciement
                const ratingMessage = container.closest('.rating-section').querySelector('.rating-message');
                if (ratingMessage) {
                    ratingMessage.innerHTML = `<p><strong>üéâ Merci ! Vous avez donn√© ${rating} √©toile(s)</strong></p>
                                             <p>Votre avis compte beaucoup ! üíô</p>`;
                }
            }

            // Animation d'apparition progressive des commentaires
            const comments = document.querySelectorAll('.comment');
            comments.forEach((comment, index) => {
                comment.style.animationDelay = `${index * 0.1}s`;
            });
        });
    </script>
